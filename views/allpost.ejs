<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>allpost</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Billabong&display=swap');
    .instagram-logo {
      font-family: 'Billabong', cursive;
      font-size: 2.5rem;
      background: -webkit-linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
    .post-image {
      width: 100%;
      height: 200px; /* Set a height for the dummy image */
      background-color: #ccc; /* Placeholder color */
    }
  </style>
</head>
<body class="min-h-screen w-full bg-zinc-700">
  <nav class="bg-zinc-800 text-white flex justify-between items-center p-4 top-0 static">
    <a href="/profile" class="instagram-logo">Instgram</a>
    <div class="flex items-center space-x-4">
      <a href="/home" class="hover:text-orange-500">Home</a>
      <a href="/explore" class="hover:text-orange-500">Explore</a>
      <a href="/notifications" class="hover:text-orange-500">Notifications</a>
      <a href="/messages" class="hover:text-orange-500">Messages</a>
      <form action="/logout" method="get">
        <button class="font-bold px-4 py-1 rounded-md bg-red-400 hover:bg-red-500 transition duration-300">Logout</button>
      </form>
    </div>
  </nav>

  <section id="post-section" class="post-section flex gap-4 mt-10 px-36 flex-wrap">
    <% allpost.reverse().forEach((post) => { %>
      <div class="users-post bg-zinc-600 text-white shadow-lg rounded-lg p-6 mb-4 w-96" data-post-id="<%= post._id %>">
        <div class="flex items-center font-bold space-x-3 mb-4 text-orange-500">
          <img src="/images/uploads/<%= post.user.profilepic %>" alt="Profile Image" class="rounded-full w-10 h-10"> <!-- User profile image -->
          <span>@<%= post.user.username %></span>
        </div>
        <div class="post-image mb-4"></div> <!-- Placeholder for post image -->
        <p class="text-gray-300 text-base leading-relaxed mb-4">
          <%= post.content %>
        </p>
        
        <a href="/like/<%= post._id %>" class="inline-block text-orange-500 font-mono">
          <%= post.likes.indexOf(loginUser._id) === -1 ? "Like" : "Unlike" %>
        </a>
        <a class="inline-block text-white font-bold"><%= post.likes.length %></a>
      </div>
    <% }) %>
  </section>
  <div class="flex items-center justify-center">
    <p class="text-white">Post loading.....</p>
  </div>
</body>
</html>
