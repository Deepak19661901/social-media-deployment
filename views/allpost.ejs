<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>allpost</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Billabong&display=swap');
    .instagram-logo {
      font-family: 'Billabong', cursive;
      font-size: 2.5rem;
      background: -webkit-linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .post-image img {
      width: 100%;
      height: 200px;
      object-fit: cover;
    }

    .comment-text {
      display: none;
    }

    .comment-text.active {
      display: block;
    }

    .expanded {
      height: auto;
    }

    .users-post {
      transition: height 0.3s ease;
    }
  </style>
</head>
<body class="min-h-screen w-full bg-zinc-700">
  <nav class="bg-zinc-800 text-white flex justify-between items-center p-4 top-0 static">
    <a href="/profile" class="instagram-logo">Instgram</a>
    <div class="flex items-center space-x-4">
      <a href="/profile" class="hover:text-orange-500">MyAccount</a>
      <a href="/explore" class="hover:text-orange-500">Explore</a>
      <a href="/notifications" class="hover:text-orange-500">Notifications</a>
      <a href="/messages" class="hover:text-orange-500">Messages</a>
      <form action="/logout" method="get">
        <button class="font-bold px-4 py-1 rounded-md bg-red-400 hover:bg-red-500 transition duration-300">Logout</button>
      </form>
    </div>
  </nav>

  <section id="post-section" class="post-section flex gap-4 mt-10 px-60 flex-wrap">
    <% allpost.reverse().forEach((post) => { %>
      <div class="users-post bg-zinc-600 text-white shadow-lg rounded-lg p-6 mb-4 w-96" data-post-id="<%= post._id %>">
        <div class="flex items-center font-bold space-x-3 mb-4 text-orange-500">
          <img src="/images/uploads/<%= post.user.profilepic %>" alt="Profile Image" class="rounded-full w-10 h-10">
          <span>@<%= post.user.username %></span>
        </div>
        <div class="post-image mb-4">
          <img class="object-center" src="/images/uploadpostimg/<%= post.postimg %>" alt="Post Image">
        </div> 
        <p class="text-gray-500 text-base leading-relaxed mb-4">
          <%= post.content %>
        </p>
        
        <a href="/like/<%= post._id %>" class="inline-block text-orange-500 font-mono">
          <%= post.likes.indexOf(loginUser._id) === -1 ? "Like" : "Unlike" %>
        </a>
       
        <a class="inline-block text-white font-bold"><%= post.likes.length %></a>
        ðŸ’¬
        <div class="comment-section mt-4">
          <form action="/addcomment" method="post" class="flex items-center space-x-2">
            <input class="flex-grow rounded-md bg-gray-800 text-white border border-gray-600 px-2 py-1 placeholder-gray-400" 
                   type="text" 
                   placeholder="Add a comment..." 
                   name="comment" 
                   required>
            <input type="hidden" name="postId" value="<%= post._id %>">
            <button class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-1 px-3 rounded-md transition duration-200">
              Add
            </button>
          </form>
        
          <div class="comment-text mt-3 space-y-2 max-h-64 overflow-y-auto">
            <% post.comments.forEach(comment => { %>
              <div class="bg-gray-800 p-2 rounded-md">
                <span class="font-bold text-blue-400">@<%= comment.user.username %></span>
                <span class="block text-gray-300"><%= comment.text %></span>
              </div>
            <% }) %>
          </div>
        </div>
        
      </div>
    <% }) %>
  </section>

  
  <div class="flex items-center justify-center">
    <p class="text-white">Post loading.....</p>
  </div>

  <script>
    document.querySelectorAll('.users-post').forEach(post => {
      post.addEventListener('click', () => {
        const commentText = post.querySelector('.comment-text');
        commentText.classList.toggle('active');
        post.classList.toggle('expanded');
      });
    });
  </script>
</body>
</html>
