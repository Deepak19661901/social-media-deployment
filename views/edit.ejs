<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Your Post</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Billabong&display=swap');

    
    .instagram-logo {
      font-family: 'Billabong', cursive;
      font-size: 2.5rem;
      background: -webkit-linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
  </style>
</head>

<body class="min-h-screen w-full bg-zinc-700 text-white">
  <!-- YaariSapce Logo and Navigation -->
  <div class="flex justify-start items-center py-5 px-10 lg:px-36">
    <a href="/profile" class="instagram-logo text-4xl font-bold">YaariSpace</a>
  </div>

  <!-- Edit Post Section -->
  <section class="px-10 lg:px-36 py-2">
    <h2 class="text-2xl font-mono mb-5 text-white">Edit Post</h2>

    <!-- Edit Post Form -->
    <form class="flex flex-col" action="/update/<%= editdata._id %>" method="post" enctype="multipart/form-data">
      <!-- Current Post Image -->
      <div class="mb-6">
        <img src="<%= editdata.postimg?.url %>" alt="Current Post Image" id="preview-image"
          class="max-w-md rounded-lg shadow-lg mb-4 object-contain h-64" onerror="this.src='/images/default-post.png'">
        <div class="mb-4">
          <label class="block text-gray-300 text-sm font-bold mb-2">
            Update Image (Optional)
          </label>
          <input type="file" name="postimg" accept="image/*" onchange="previewImage(this)"
            class="w-full px-3 py-2 bg-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-gray-300">
        </div>
      </div>

      <!-- Text Area for Post Content -->
      <textarea
        class="px-4 py-2 w-full lg:w-96 h-32 rounded-md bg-slate-600 text-white border border-gray-500 outline-none resize-none font-mono text-lg"
        placeholder="What's on your mind?" name="content" required><%= editdata.content %></textarea>

      <!-- Submit Button -->
      <button type="submit"
        class="w-40 bg-yellow-500 hover:bg-yellow-600 text-black px-5 py-2 mt-4 rounded-md transition duration-300">
        Save Changes
      </button>
    </form>

    <!-- Back to Profile Link -->
    <div class="mt-4">
      <a href="/profile" class="text-blue-400 hover:text-blue-300">Back to Profile</a>
    </div>
  </section>

  <!-- Add this script -->
  <script>
    function previewImage(input) {
      const preview = document.getElementById('preview-image');
      if (input.files && input.files[0]) {
        const reader = new FileReader();
        reader.onload = function (e) {
          preview.src = e.target.result;
        }
        reader.readAsDataURL(input.files[0]);
      }
    }
  </script>
</body>

</html>